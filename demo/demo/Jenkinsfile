pipeline {
    agent any 
    tools {maven 'maven'}
    
    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }
        
        stage('Build') {
            steps {
                sh 'mvn clean package -f Build and Test Spring Boot Application/demo/demo/pom.xml'
            }
        }
        
        stage('Test') {
            steps {
                sh 'mvn test -f Build and Test Spring Boot Application/demo/demo/pom.xml'
            }
        }
    }
}
